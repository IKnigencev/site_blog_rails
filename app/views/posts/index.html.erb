<h1>Listing Post</h1>

<%= render "posts/filter_main_page" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to "Пост", show_posts_path(id: post.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "common/pagination", locals: { posts: @posts, next_page: @next_page, prev_page: @prev_page } %>

<br>

<%= link_to "New Post", new_post_path %>
